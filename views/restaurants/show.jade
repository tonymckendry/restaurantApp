extends ../layout

block content
  a(href='/')
    img(id='home' src='https://cdn2.iconfinder.com/data/icons/windows-8-metro-style/128/home.png')
  h1#title #{name}
  div#left
    - var genre=results[0].genre
    - console.log(genre)
    - var image='/images/' + genre + '.png'
    - console.log(image)
    img(src=image)
    div#employees
      a(href= '/restaurants/' + results[0].name + '/employees/new/')
        button#addEmployee Add Employee
      table
        thead 
          tr
            th First Name
            th Last Name
            th Position
        tbody
          each val, index in employees
            tr
              td #{employees[index].first_name}
              td #{employees[index].last_name}
              td #{employees[index].position}
  div#right
    - var rating=results[0].rating
    p #{results[0].genre} cuisine
    p Located in #{results[0].location}
    p #{results[0].description}
    p Rating:
      span
        while rating > 0
          img(src='/images/star.svg', class='star')
          - rating--
    span#buttons
      a#edit(class ='button', href='/restaurants/' + results[0].name + '/edit/') Edit
      form(action='/restaurants/#{results[0].name}/delete' method='post' id='deleteButton')
        button#delete(type='submit', value='Delete') Delete
    div#reviews
      for val, index in reviews
        div.review
          div.authorSpan
            |#{reviews[index].author}
            span.dateSpan #{reviews[index].date.toString().slice(3,15)}
          p.reviewText #{reviews[index].review}
          - var revRating=reviews[index].rating
          span.revRating
            while revRating > 0
              img(src='/images/star.svg', class='revStar')
              - revRating--
          span.editReview 
            a(href='#{results[0].name}/reviews/#{reviews[index].id}/edit') Edit Review
            
            
